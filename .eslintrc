{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "browser": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "warn",
    "no-unexpected-multiline": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": "error",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "react/display-name": 1,
    "react/jsx-uses-vars": 1,
    "semi": ["error", "always"]
  }
}
